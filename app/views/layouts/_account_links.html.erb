<% if user_signed_in? %>
  <div class="dropdown">
    <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
      <%= current_user.email %>
    </button>
    <ul class="dropdown-menu">
      <li><%= link_to "Editar Perfil", edit_user_registration_path, class: "dropdown-item" %></li>
      <li><hr class="dropdown-divider"></li>
      <li><%= button_to "Sign Out", destroy_user_session_path, method: :delete, class: "dropdown-item" %></li>
    </ul>
  </div>
<% else %>
  <div>
    <%= link_to "Sign In", new_user_session_path, class: 'link-secondary link-offset-3' %>&nbsp;&nbsp;
  </div>
<% end%>