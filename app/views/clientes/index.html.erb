<p style="color: green"><%= notice %></p>

<% content_for :title, "Clientes" %>

<div class="d-flex justify-content-between align-items-center mb-3">
  <h1>Clientes</h1>
  <%= link_to "Novo cliente", new_cliente_path, class: "btn btn-primary" %>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Nome</th>
      <th>Email</th>
      <th>Telefone</th>
      <th>CPF</th>
      <th>Endereço</th>
      <th colspan="3">Ações</th>
    </tr>
  </thead>
  <tbody>
    <% @clientes.each do |cliente| %>
      <tr>
        <td><%= cliente.id %></td>
        <td><%= cliente.nome %></td>
        <td><%= cliente.email %></td>
        <td><%= cliente.telefone %></td>
        <td><%= cliente.cpf %></td>
        <td><%= cliente.endereco %></td>
        <td><%= link_to "Exibir", cliente, class: "btn btn-info btn-sm" %></td>
        <td><%= link_to "Editar", edit_cliente_path(cliente), class: "btn btn-warning btn-sm" %></td>
        <td>
          <%= confirm_delete_button "Excluir", cliente, { class: "btn btn-danger btn-sm" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
