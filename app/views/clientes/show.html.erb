<%= content_for :title, "Detalhes do Cliente" %>

<div class="container mt-4">
  <% if notice %>
    <div class="alert alert-success">
      <%= notice %>
    </div>
  <% end %>

  <div class="mb-4">
    <%= render @cliente %>
  </div>

  <div class="d-flex justify-content-between">
    <div>
      <%= link_to "Editar cliente", edit_cliente_path(@cliente), class: "btn btn-warning me-2" %>
      <%= link_to "Voltar para clientes", clientes_path, class: "btn btn-secondary" %>
    </div>
    <div>
      <%= button_to "Excluir cliente", @cliente, method: :delete, data: { confirm: "Tem certeza de que deseja excluir este cliente?" }, class: "btn btn-danger" %>
    </div>
  </div>
</div>
