<%= content_for :title, "Detalhes do funcionario" %>

<div class="container mt-4">
  <% if notice %>
    <div class="alert alert-success">
      <%= notice %>
    </div>
  <% end %>

  <div class="mb-4">
    <%= render @funcionario %>
  </div>

  <div class="d-flex justify-content-between">
    <div>
      <%= link_to "Voltar para funcionarios", funcionarios_path, class: "btn btn-secondary" %>
    </div>
    <div class="d-flex">
      <%= link_to "Editar funcionario", edit_funcionario_path(@funcionario), class: "btn btn-warning me-2" %>
      <%= button_to "Excluir funcionario", @funcionario, method: :delete, data: { confirm: "Tem certeza de que deseja excluir este funcionario?" }, class: "btn btn-danger" %>
    </div>
  </div>
</div>
