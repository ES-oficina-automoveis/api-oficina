<%= content_for :title, "Detalhes do estoque" %>

<div class="container mt-4">
  <% if notice %>
    <div class="alert alert-success">
      <%= notice %>
    </div>
  <% end %>

  <div class="mb-4">
    <%= render @estoque %>
  </div>

  <div class="d-flex justify-content-between">
    <div>
      <%= link_to "Voltar para estoques", estoques_path, class: "btn btn-secondary" %>
    </div>
    <div class="d-flex">
      <%= link_to "Editar estoque", edit_estoque_path(@estoque), class: "btn btn-warning me-2" %>
      <%= confirm_delete_button "Excluir estoque", @estoque, { class: "btn btn-danger" } %>
    </div>
  </div>
</div>
