<%= content_for :title, "Detalhes da venda" %>

<div class="container mt-4">
  <% if notice %>
    <div class="alert alert-success">
      <%= notice %>
    </div>
  <% end %>

  <div class="mb-4">
    <%= render @venda_servico %>
  </div>

  <div class="d-flex justify-content-between">
    <div>
      <%= link_to "Voltar para vendas", venda_servicos_path, class: "btn btn-secondary" %>
    </div>
    <div class="d-flex">
      <%= link_to "Editar venda", edit_venda_servico_path(@venda_servico), class: "btn btn-warning me-2" %>
      <%= button_to "Excluir venda", @venda_servico, method: :delete, data: { confirm: "Tem certeza de que deseja excluir esta venda?" }, class: "btn btn-danger" %>
    </div>
  </div>
</div>
