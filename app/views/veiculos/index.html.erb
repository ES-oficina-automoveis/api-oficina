<p style="color: green"><%= notice %></p>

<% content_for :title, "Veículos" %>

<div class="d-flex justify-content-between align-items-center mb-3">
  <h1>Veículos</h1>
  <%= link_to "Novo veículo", new_veiculo_path, class: "btn btn-primary" %>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Placa</th>
      <th>Modelo</th>
      <th>Ano</th>
      <th>Cor</th>
      <th>Quilometragem</th>
      <th>Chassi</th>
      <th>Cliente</th>
      <th colspan="3">Ações</th>
    </tr>
  </thead>
  <tbody>
    <% @veiculos.each do |veiculo| %>
      <tr>
        <td><%= veiculo.id %></td>
        <td><%= veiculo.placa %></td>
        <td><%= veiculo.modelo %></td>
        <td><%= veiculo.ano %></td>
        <td><%= veiculo.cor %></td>
        <td><%= veiculo.quilometragem %></td>
        <td><%= veiculo.chassi %></td>
        <td><%= veiculo.cliente.nome if veiculo.cliente %></td>
        <td><%= link_to "Exibir", veiculo, class: "btn btn-info btn-sm" %></td>
        <td><%= link_to "Editar", edit_veiculo_path(veiculo), class: "btn btn-warning btn-sm" %></td>
        <td>
          <%= link_to "Excluir", veiculo, method: :delete, data: { confirm: "Tem certeza que deseja excluir este veículo?" }, class: "btn btn-danger btn-sm" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
