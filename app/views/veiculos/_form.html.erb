<%= form_with(model: veiculo, local: true) do |form| %>
  <% if veiculo.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(veiculo.errors.count, "erro") %> <%= "encontrado".pluralize(veiculo.errors.count) %>:</h4>
      <ul>
        <% veiculo.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :placa, class: "form-label" %>
    <%= form.text_field :placa, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :modelo, class: "form-label" %>
    <%= form.text_field :modelo, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :ano, class: "form-label" %>
    <%= form.number_field :ano, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :cor, class: "form-label" %>
    <%= form.text_field :cor, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :quilometragem, class: "form-label" %>
    <%= form.text_field :quilometragem, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :chassi, class: "form-label" %>
    <%= form.text_field :chassi, class: "form-control" %>
  </div>

  <% if current_user.admin? %>
    <div class="mb-3">
      <%= form.label :cliente_id, "Cliente", class: "form-label" %>
      <%= form.collection_select :cliente_id, clientes, :id, :nome, { prompt: "Selecione um cliente" }, { class: "form-select" } %>
    </div>
  <% end %>

  <div class="text-end mt-3">
    <%= form.submit "Salvar", class: "btn btn-primary" %>
  </div>
<% end %>
