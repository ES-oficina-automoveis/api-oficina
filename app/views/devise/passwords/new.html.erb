<div class="container" style="margin-top: 10vh">
  <div class="row justify-content-center align-items-center">
    <div class="col-md-6">
      <div class="card p-5 m-3 shadow-sm">
        <h2 class="text-center mb-4">Forgot your password?</h2>
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="form-group mb-4">
            <%= f.label :email, "Email Address", class: "form-label" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-lg" %>
          </div>

          <div class="d-grid gap-2">
            <%= f.submit "Send me reset password instructions", class: "btn btn-primary btn-lg btn-block" %>
          </div>
        <% end %>
        <div class="mt-3 text-center">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>

