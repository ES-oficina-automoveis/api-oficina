<div class="container my-5">
  <div class="row justify-content-center align-items-center">
    <div class="col-md-6">
      <div class="card p-5 shadow-sm" style="max-width: 600px;">
        <h2 class="text-center mb-4">Editar Perfil</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="form-group mb-4">
            <%= f.label :email, class: "form-label" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-lg" %>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div class="alert alert-info mb-4">
              Currently waiting confirmation for: <%= resource.unconfirmed_email %>
            </div>
          <% end %>

          <div class="form-group mb-4">
            <%= f.label :senha, class: "form-label" %>
            <i>(deixe em branco se não quiser alterar)</i>
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-lg" %>
            <% if @minimum_password_length %>
              <div class="form-text">
                <em>Mínimo de <%= @minimum_password_length %> caracteres</em>
              </div>
            <% end %>
          </div>

          <div class="form-group mb-4">
            <%= f.label :confirmação_de_senha, class: "form-label" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-lg" %>
          </div>

          <div class="form-group mb-4">
            <%= f.label :senha_atual, class: "form-label" %>
            <i>(precisamos da sua senha atual para confirmar as alterações)</i>
            <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control form-control-lg" %>
          </div>

          <div class="text-center mb-4">
            <%= f.submit "Editar", class: "btn btn-primary btn-lg" %>
          </div>
        <% end %>

        <div class="text-center mt-5">
          <h3 class="pb-3">Não está contente?</h3>
          <%= button_to "Excluir minha conta", registration_path(resource_name), data: { confirm: "Tem certeza?", turbo_confirm: "Tem certeza" }, method: :delete, class: "btn btn-danger" %>
        </div>

        <div class="text-center mt-3">
          <%= link_to "Voltar", :back, class: "btn btn-secondary" %>
        </div>
      </div>
    </div>
  </div>
</div>
