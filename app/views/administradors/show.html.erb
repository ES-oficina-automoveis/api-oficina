<%= content_for :title, "Detalhes do administrador" %>

<div class="container mt-4">
  <% if notice %>
    <div class="alert alert-success">
      <%= notice %>
    </div>
  <% end %>

  <div class="mb-4">
    <%= render @administrador %>
  </div>

  <div class="d-flex justify-content-between">
    <div>
      <%= link_to "Voltar para administradors", administradors_path, class: "btn btn-secondary" %>
    </div>
    <div class="d-flex">
      <%= link_to "Editar administrador", edit_administrador_path(@administrador), class: "btn btn-warning me-2" %>
      <%= button_to "Excluir administrador", @administrador, method: :delete, data: { confirm: "Tem certeza de que deseja excluir este administrador?" }, class: "btn btn-danger" %>
    </div>
  </div>
</div>
