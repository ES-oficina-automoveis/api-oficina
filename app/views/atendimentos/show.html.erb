<%= content_for :title, "Detalhes do Atendimento" %>

<div class="container mt-4">
  <% if notice %>
    <div class="alert alert-success">
      <%= notice %>
    </div>
  <% end %>

  <div class="mb-4">
    <%= render @atendimento %>
  </div>

  <div class="d-flex justify-content-between">
    <div>
      <%= link_to "Voltar para atendimentos", atendimentos_path, class: "btn btn-secondary" %>
    </div>
    <div class="d-flex">
      <%= link_to "Editar atendimento", edit_atendimento_path(@atendimento), class: "btn btn-warning me-2" %>
      <%= button_to "Excluir atendimento", @atendimento, method: :delete, data: { confirm: "Tem certeza de que deseja excluir este atendimento?" }, class: "btn btn-danger" %>
    </div>
  </div>
</div>
