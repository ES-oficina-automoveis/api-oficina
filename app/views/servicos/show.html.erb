<%= content_for :title, "Detalhes do serviço" %>

<div class="container mt-4">
  <% if notice %>
    <div class="alert alert-success">
      <%= notice %>
    </div>
  <% end %>

  <div class="mb-4">
    <%= render @servico %>
  </div>

  <div class="d-flex justify-content-between">
    <div>
      <%= link_to "Voltar para serviços", servicos_path, class: "btn btn-secondary" %>
    </div>
    <div class="d-flex">
      <%= link_to "Editar serviço", edit_servico_path(@servico), class: "btn btn-warning me-2" %>
      <%= button_to "Excluir serviço", @servico, method: :delete, data: { confirm: "Tem certeza de que deseja excluir este servico?" }, class: "btn btn-danger" %>
    </div>
  </div>
</div>
